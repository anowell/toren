{
	"name": "toren-web",
	"version": "0.1.0",
	"description": "Toren Web Interface - Mobile-first control for Claude Code",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
